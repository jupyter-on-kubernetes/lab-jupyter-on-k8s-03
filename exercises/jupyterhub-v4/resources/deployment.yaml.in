apiVersion: apps/v1
kind: Deployment
metadata:
  name: jupyterhub
spec:
  replicas: 1
  selector:
    matchLabels:
      deployment: jupyterhub
  strategy:
    type: Recreate
  template:
    metadata:
      labels:
        deployment: jupyterhub
    spec:
      serviceAccountName: jupyterhub
      containers:
      - name: jupyterhub
        image: ${REGISTRY_HOST}/jupyterhub:latest
        ports:
        - containerPort: 8000
          protocol: TCP
        - containerPort: 8001
          protocol: TCP
        resources:
          limits:
            memory: 512Mi
          requests:
            memory: 512Mi
        volumeMounts:
        - name: data
          mountPath: /var/run/jupyterhub
      volumes:
      - name: data
        persistentVolumeClaim:
          claimName: jupyterhub
